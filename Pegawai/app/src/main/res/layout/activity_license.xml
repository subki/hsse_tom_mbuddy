<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/ic_bg_landscape"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            android:id="@+id/toolbar"
            layout="@layout/view_toolbar" >
        </include>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:id="@+id/relativeLayout">
            <FrameLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/containerView"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_above="@+id/ic_25">
            </FrameLayout>
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_scan1"
                app:fabSize="mini"
                android:layout_gravity="right|bottom"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:visibility="gone" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ic_25"
                android:src="@drawable/ic_25"
                android:layout_above="@+id/editText"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:id="@+id/a3"
                android:text=" : Trained"
                android:textColor="#000"
                android:textSize="10dip"
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:layout_alignBottom="@+id/ic_25"
                android:layout_toRightOf="@+id/ic_25"
                android:layout_toEndOf="@+id/ic_25" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ic_50"
                android:src="@drawable/ic_50"
                android:layout_marginLeft="9dp"
                android:layout_marginStart="9dp"
                android:layout_alignTop="@+id/ic_25"
                android:layout_toRightOf="@+id/a3"
                android:layout_toEndOf="@+id/a3" />
            <TextView
                android:id="@+id/a4"
                android:text=" : Able to do"
                android:textColor="#000"
                android:textSize="10dip"
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:layout_above="@+id/editText2"
                android:layout_toRightOf="@+id/ic_50"
                android:layout_toEndOf="@+id/ic_50" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ic_75"
                android:src="@drawable/ic_75"
                android:layout_marginLeft="5dp"
                android:layout_alignBottom="@+id/a4"
                android:layout_toRightOf="@+id/a4"
                android:layout_toEndOf="@+id/a4"
                android:layout_marginStart="5dp" />
            <TextView
                android:id="@+id/a5"
                android:text=" : Expert"
                android:textColor="#000"
                android:textSize="10dip"
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:layout_above="@+id/editText2"
                android:layout_toRightOf="@+id/ic_75"
                android:layout_toEndOf="@+id/ic_75" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ic_100"
                android:src="@drawable/ic_100"
                android:layout_marginLeft="7dp"
                android:layout_marginStart="7dp"
                android:layout_alignBottom="@+id/ic_50"
                android:layout_toRightOf="@+id/a5"
                android:layout_toEndOf="@+id/a5" />
            <TextView
                android:id="@+id/a1"
                android:text=" : Able to Train Others"
                android:textColor="#000"
                android:textSize="10dip"
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:layout_alignBottom="@+id/ic_50"
                android:layout_toRightOf="@+id/ic_100"
                android:layout_toEndOf="@+id/ic_100" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ic_blank"
                android:src="@drawable/ic_blank"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_alignBottom="@+id/a1"
                android:layout_toRightOf="@+id/a1"
                android:layout_toEndOf="@+id/a1" />
            <TextView
                android:id="@+id/a10"
                android:text=" : Not Trained"
                android:textColor="#000"
                android:textSize="10dip"
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:layout_alignBottom="@+id/ic_50"
                android:layout_toRightOf="@+id/ic_blank"
                android:layout_toEndOf="@+id/ic_blank" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/kuning"
                android:text="     "
                android:id="@+id/editText"
                android:layout_alignBottom="@+id/c1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="10dp" />
            <TextView
                android:id="@+id/c1"
                android:text=" : 2 month to expired"
                android:textColor="#000"
                android:textSize="10dip"
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/editText"
                android:layout_toEndOf="@+id/editText" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/merah"
                android:text="     "
                android:id="@+id/editText2"
                android:textSize="10dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/c1"
                android:layout_toEndOf="@+id/c1"
                android:layout_marginLeft="10dp" />
            <TextView
                android:id="@+id/c3"
                android:text=" : Expired / Not Trained"
                android:textColor="#000"
                android:textSize="10dip"
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/editText2"
                android:layout_toEndOf="@+id/editText2" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/ijo"
                android:text="     "
                android:id="@+id/editText3"
                android:layout_marginLeft="10dp"
                android:layout_alignBottom="@+id/c2"
                android:layout_toRightOf="@+id/c3"
                android:layout_toEndOf="@+id/c3"
                android:textSize="10dp" />
            <TextView
                android:id="@+id/c2"
                android:text="Permitted to Work"
                android:textColor="#000"
                android:textSize="10dip"
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/editText3"
                android:layout_toEndOf="@+id/editText3" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/cyan"
                android:text="     "
                android:id="@+id/editText4"
                android:layout_marginLeft="10dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/c2"
                android:layout_toEndOf="@+id/c2"
                android:textSize="10dp" />
            <TextView
                android:id="@+id/c9"
                android:text=" : Non mandatory training"
                android:textColor="#000"
                android:textSize="10dip"
                android:layout_gravity="left"
                android:layout_column="3"
                android:layout_row="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/editText4"
                android:layout_toEndOf="@+id/editText4" />
        </RelativeLayout>

    </RelativeLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/view_nav_header"
        app:itemTextColor="#fff"
        app:itemIconTint="#B6B6B6"
        app:menu="@menu/menu_nav_items" />
</android.support.v4.widget.DrawerLayout>
