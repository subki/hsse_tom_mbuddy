<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_bg_headers"
        tools:context="com.example.pegawai.nilai_training">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <include
                android:id="@+id/toolbar"
                layout="@layout/view_toolbar" >
            </include>
            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/scrollView2"
                android:layout_below="@+id/toolbar"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:shrinkColumns="*"
                android:stretchColumns="*"
                android:id="@+id/tabelNilai">
                <TableRow
                    android:id="@+id/row2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dip" >
                    <TextView
                        android:text="Penilaian Training HSSE"
                        android:gravity="center"
                        android:layout_span="2"
                        android:textSize="18sp"
                        android:textColor="@color/red"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dip" >

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/ztgl"
                        android:layout_span="2"
                        android:textColor="@color/red"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true">
                        <EditText
                            android:id="@+id/xtgl"
                            android:textColor="#000"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="top"
                            android:padding="4dp"
                            android:textSize="14dp"
                            android:textColorHint="@color/red"
                            android:hint="Tanggal"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true" />
                    </android.support.design.widget.TextInputLayout>
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dip" >

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/znik_karyawan"
                        android:layout_span="2"
                        android:textColor="@color/red"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true">
                        <EditText
                            android:id="@+id/xnik_karyawan"
                            android:textColor="#000"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="top"
                            android:padding="4dp"
                            android:textSize="14dp"
                            android:textColorHint="@color/red"
                            android:hint="NIK Karyawan"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true" />
                    </android.support.design.widget.TextInputLayout>
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dip" >

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/znama_karyawan"
                        android:layout_span="2"
                        android:textColor="@color/red"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true">
                        <EditText
                            android:id="@+id/xnama_karyawan"
                            android:textColor="#000"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="top"
                            android:padding="4dp"
                            android:textSize="14dp"
                            android:textColorHint="@color/red"
                            android:hint="Nama Karyawan"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true" />
                    </android.support.design.widget.TextInputLayout>
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dip" >

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/znik_trainer"
                        android:layout_span="2"
                        android:textColor="@color/red"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true">
                        <EditText
                            android:id="@+id/xnik_trainer"
                            android:textColor="#000"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="top"
                            android:padding="4dp"
                            android:textSize="14dp"
                            android:textColorHint="@color/red"
                            android:hint="NIK Trainer"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true" />
                    </android.support.design.widget.TextInputLayout>
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dip" >

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/znama_trainer"
                        android:layout_span="2"
                        android:textColor="@color/red"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true">
                        <EditText
                            android:id="@+id/xnama_trainer"
                            android:textColor="#000"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="top"
                            android:padding="4dp"
                            android:textSize="14dp"
                            android:textColorHint="@color/red"
                            android:hint="Nama Trainer"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true" />
                    </android.support.design.widget.TextInputLayout>
                </TableRow>
                <TableRow
                    android:id="@+id/rowa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dip" >
                    <TextView
                        android:text="Pilih Kode Training"
                        android:gravity="left"
                        android:layout_span="2"
                        android:layout_marginTop="15dip"
                        android:textSize="14sp"
                        android:textColor="@color/red"/>
                </TableRow>
                <TableRow
                    android:id="@+id/rowb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/divider"
                    android:textAlignment="center">
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinnerKode"
                        android:background="#ffb34b"
                        android:layout_gravity="left"
                        android:layout_span="2"/>
                </TableRow>
                <TableRow
                    android:id="@+id/rowb1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dip" >
                    <TextView
                        android:text=""
                        android:gravity="left"
                        android:layout_span="2"
                        android:id="@+id/kode"
                        android:textSize="14sp"
                        android:textColor="@color/red"/>
                </TableRow>
                <TableRow
                    android:id="@+id/rowc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dip" >
                    <TextView
                        android:text="Masukan Nilai"
                        android:gravity="left"
                        android:layout_span="2"
                        android:textSize="14sp"
                        android:textColor="@color/red"/>
                </TableRow>
                <TableRow
                    android:id="@+id/rowd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/divider"
                    android:textAlignment="center">
                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinnerNilai"
                        android:background="#ffb34b"
                        android:layout_gravity="left"
                        android:layout_span="2"/>
                </TableRow>
                <TableRow
                    android:id="@+id/rowe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dip" >
                    <Button
                        android:text="Simpan"
                        android:id="@+id/simpan_nilai"
                        />
                    <Button
                        android:text="Batal"
                        android:id="@+id/batal_nilai"
                        />
                </TableRow>
            </TableLayout>
        </ScrollView>

    </RelativeLayout>
</RelativeLayout>
<android.support.design.widget.NavigationView
    android:id="@+id/navigation"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    app:headerLayout="@layout/view_nav_header"
    app:itemTextColor="#fff"
    app:itemIconTint="#B6B6B6"
    app:menu="@menu/menu_nav_items" />
</android.support.v4.widget.DrawerLayout>
