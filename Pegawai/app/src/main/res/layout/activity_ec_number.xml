<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            android:id="@+id/toolbar"
            layout="@layout/view_toolbar" >
        </include>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:background="@drawable/ic_bg_headers">

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.example.pegawai.EC_number"
                android:layout_below="@+id/toolbar">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/tableLayout"
                    android:shrinkColumns="*"
                    android:stretchColumns="*">
                    <TableRow
                        android:id="@+id/row1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/orange"
                        android:textAlignment="center"
                        android:baselineAligned="false">


                        <TextView
                            android:id="@+id/judul"
                            android:text="Emergency Contact Number"
                            android:textColor="#fff"
                            android:textSize="24dip"
                            android:textStyle="bold"
                            android:layout_span="3"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@+id/tableLayout"
                            android:layout_alignEnd="@+id/tableLayout"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:textAlignment="center" />

                    </TableRow>
                    <TableRow
                        android:id="@+id/row2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/divider"
                        android:textAlignment="center"
                        android:padding="5dp">


                        <TextView
                            android:id="@+id/a2"
                            android:text="Shell Companies in Indonesia"
                            android:textColor="#fff"
                            android:textSize="12dip"
                            android:textStyle="bold"
                            android:textAppearance="?android:attr/textAppearanceLarge" />

                        <TextView
                            android:id="@+id/b2"
                            android:text=":"
                            android:textColor="#fff"
                            android:textSize="12dip"
                            android:textStyle="bold"
                            android:textAppearance="?android:attr/textAppearanceLarge" />
                        <TextView
                            android:id="@+id/c2"
                            android:text="02178838838"
                            android:autoLink="all"
                            android:textColor="#fff"
                            android:textSize="12dip"
                            android:textStyle="bold"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:layout_gravity="left" />

                    </TableRow>
                    <TableRow
                        android:id="@+id/row3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/divider"
                        android:textAlignment="center"
                        android:padding="5dp">


                        <TextView
                            android:id="@+id/a3"
                            android:text="Shell Retail Emergency"
                            android:textColor="#fff"
                            android:textSize="12dip"
                            android:textStyle="bold"
                            android:textAppearance="?android:attr/textAppearanceLarge" />

                        <TextView
                            android:id="@+id/b3"
                            android:text=":"
                            android:textColor="#fff"
                            android:textSize="12dip"
                            android:textStyle="bold"
                            android:textAppearance="?android:attr/textAppearanceLarge" />
                        <TextView
                            android:id="@+id/c3"
                            android:text="02178546473"
                            android:autoLink="all"
                            android:textColor="#fff"
                            android:textSize="12dip"
                            android:textStyle="bold"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:layout_gravity="left" />

                    </TableRow>
                    <TableRow
                        android:id="@+id/row4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/divider"
                        android:textAlignment="center"
                        android:padding="5dp">


                        <TextView
                            android:id="@+id/a4"
                            android:text="Emergency Duty Manager"
                            android:textColor="#fff"
                            android:textSize="12dip"
                            android:textStyle="bold"
                            android:textAppearance="?android:attr/textAppearanceLarge" />

                        <TextView
                            android:id="@+id/b4"
                            android:text=":"
                            android:textColor="#fff"
                            android:textSize="12dip"
                            android:textStyle="bold"
                            android:textAppearance="?android:attr/textAppearanceLarge" />
                        <TextView
                            android:id="@+id/c4"
                            android:text="0811984290"
                            android:autoLink="all"
                            android:textColor="#fff"
                            android:textSize="12dip"
                            android:textStyle="bold"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:layout_gravity="left" />

                    </TableRow>
                    <TableRow
                        android:id="@+id/row5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/divider"
                        android:textAlignment="center"
                        android:padding="5dp">


                        <TextView
                            android:id="@+id/a5"
                            android:text="Pemadam Kebakaran"
                            android:textColor="#fff"
                            android:textSize="12dip"
                            android:textStyle="bold"
                            android:textAppearance="?android:attr/textAppearanceLarge" />

                        <TextView
                            android:id="@+id/b5"
                            android:text=":"
                            android:textColor="#fff"
                            android:textSize="12dip"
                            android:textStyle="bold"
                            android:textAppearance="?android:attr/textAppearanceLarge" />
                        <TextView
                            android:id="@+id/c5"
                            android:text="113"
                            android:autoLink="all"
                            android:textColor="#fff"
                            android:textSize="12dip"
                            android:textStyle="bold"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:layout_gravity="left" />

                    </TableRow>
                    <TableRow
                        android:id="@+id/row6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/divider"
                        android:textAlignment="center"
                        android:padding="5dp">


                        <TextView
                            android:id="@+id/a6"
                            android:text="Ambulance"
                            android:textColor="#fff"
                            android:textSize="12dip"
                            android:textStyle="bold"
                            android:textAppearance="?android:attr/textAppearanceLarge" />

                        <TextView
                            android:id="@+id/b6"
                            android:text=":"
                            android:textColor="#fff"
                            android:textSize="12dip"
                            android:textStyle="bold"
                            android:textAppearance="?android:attr/textAppearanceLarge" />
                        <TextView
                            android:id="@+id/c6"
                            android:text="118"
                            android:autoLink="all"
                            android:textColor="#fff"
                            android:textSize="12dip"
                            android:textStyle="bold"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:layout_gravity="left" />

                    </TableRow>
                    <TableRow
                        android:id="@+id/row7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/divider"
                        android:textAlignment="center"
                        android:padding="5dp">


                        <TextView
                            android:id="@+id/a7"
                            android:text="Police"
                            android:textColor="#fff"
                            android:textSize="12dip"
                            android:textStyle="bold"
                            android:textAppearance="?android:attr/textAppearanceLarge" />

                        <TextView
                            android:id="@+id/b7"
                            android:text=":"
                            android:textColor="#fff"
                            android:textSize="12dip"
                            android:textStyle="bold"
                            android:textAppearance="?android:attr/textAppearanceLarge" />
                        <TextView
                            android:id="@+id/c7"
                            android:text="112"
                            android:autoLink="all"
                            android:textColor="#fff"
                            android:textSize="12dip"
                            android:textStyle="bold"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:layout_gravity="left" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/row8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/divider"
                        android:textAlignment="center">
                        <Spinner
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/spinnerBatch"
                            android:background="#ffb34b"
                            android:layout_span="3"/>
                    </TableRow>

                    <TableRow
                        android:id="@+id/row9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center">
                    <ListView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/listViewECN"
                            android:layout_centerHorizontal="true"
                        android:layout_span="3" />
                    </TableRow>

                </TableLayout>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/view_nav_header"
        app:itemTextColor="#fff"
        app:itemIconTint="#B6B6B6"
        app:menu="@menu/menu_nav_items" />
</android.support.v4.widget.DrawerLayout>

